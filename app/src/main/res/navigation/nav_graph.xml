<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/mainOnboardingFragment2">
    <fragment
        android:id="@+id/mainOnboardingFragment2"
        android:name="com.erickvazquezs.mantenteencontacto.ui.fragments.onboarding.MainOnboardingFragment"
        android:label="fragment_main_onboarding"
        tools:layout="@layout/fragment_main_onboarding" >
        <action
            android:id="@+id/action_mainOnboardingFragment2_to_loginFragment"
            app:popUpTo="@id/mainOnboardingFragment2"
            app:popUpToInclusive="true"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.erickvazquezs.mantenteencontacto.ui.fragments.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment2"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_loginFragment_to_mapsFragment"
            app:destination="@id/mapsFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.erickvazquezs.mantenteencontacto.ui.fragments.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_registerFragment_to_mapsFragment"
            app:destination="@id/mapsFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.erickvazquezs.mantenteencontacto.ui.fragments.locations.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <action
            android:id="@+id/action_mapsFragment_to_addNewPlaceFragment"
            app:destination="@id/addNewPlaceFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNewPlaceFragment"
        android:name="com.erickvazquezs.mantenteencontacto.ui.fragments.locations.AddNewPlaceFragment"
        android:label="fragment_add_new_place"
        tools:layout="@layout/fragment_add_new_place" >
        <argument
            android:name="location"
            app:argType="com.google.android.gms.maps.model.LatLng" />
        <argument
            android:name="adress"
            app:argType="string"
            android:defaultValue="DirecciÃ³n no especificada" />
    </fragment>
    <fragment
        android:id="@+id/userAccountFragment"
        android:name="com.erickvazquezs.mantenteencontacto.ui.fragments.account.UserAccountFragment"
        android:label="fragment_user_account"
        tools:layout="@layout/fragment_user_account" >
        <action
            android:id="@+id/action_userAccountFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph.xml"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>